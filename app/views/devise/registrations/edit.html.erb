<h2>Редактирование <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control' %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-warning">На данный момент ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group"><%= f.label :password %> <i class="text-warning">(Оставьте пустым если вы не хотите менять пароль)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>

  <div class="form-group"><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

  <div class="form-group"><%= f.label :current_password %> <i class="text-warning">(Нам необходим ваш текущий пароль для подтверждения)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %></div>

  <div><%= f.submit "Сохранить", class: 'btn btn-default' %></div>
<% end %>

<% if false %>
<p>Что-то не нравится? <%= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete %></p>
<% end %>
<div class="enter"><%= link_to "Назад", :back %></div>
