<h2>Изменение пароля</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group"><%= f.label :password, "Новый пароль" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %></div>

  <div class="form-group"><%= f.label :password_confirmation, "Повторите" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

  <div><%= f.submit "Изменить мой пароль", class: 'btn btn-default' %></div>
<% end %>

<%= render "devise/shared/links" %>
